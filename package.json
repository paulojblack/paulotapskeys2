{
    "name": "paulotapskeys",
    "version": "1.0.1",
    "main": "lib/hapi/index.js",
    "scripts": {
        "tsc": "tsc",
        "tsc:w": "tsc -w",
        "lite": "lite-server",
        "build:js": "node scripts/systemjs-build.js",
        "build:sass": "node-sass --include-path scss scss/main.scss dist/main.css",
        "sass:w": "node-sass --watch --include-path scss scss/main.scss src/app/css/main.css",
        "start": "concurrently \"npm run sass:w\" \"npm run tsc:w\" \"nodemon lib/hapi/index.js -e js,html\"  ",
        "postinstall":"cd src && rm -rf node_modules/ && npm install"
    },
    "author": "Paulo Black",
    "repository": {
        "type": "git",
        "url": "git://github.com/paulojblack/paulotapskeys2.git"
    },
    "engines": {
        "node": ">=7.1.0"
    },
    "license": "MIT",
    "devDependencies": {
        "babel-core": "^6.6.0",
        "concurrently": "^2.0.0",
        "node-sass": "^3.4.2",
        "nodemon": "^1.9.1",
        "systemjs": "^0.19.22",
        "systemjs-builder": "^0.15.3",
        "typescript": "1.8.7"
    },
    "dependencies": {
        "bcrypt-nodejs": "0.0.3",
        "bell": "^7.0.0",
        "boom": "^3.0.0",
        "debug": "^2.2.0",
        "good": "^6.4.0",
        "good-console": "^5.2.0",
        "hapi": "~13.0.0",
        "inert": "^3.2.0",
        "joi": "8.0.4",
